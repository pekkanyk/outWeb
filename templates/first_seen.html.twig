<html xmlns="http://www.w3.org/1999/xhtml" >
    <head lang="en">
        {{ include('fragments/_head.html.twig') }}
    </head>
    <body> {% block body %}
        <header>
            {{ include('fragments/_top_navi.html.twig') }}   
        </header>
        <div class="container">
            <div class="row">
                {{ form_start(form) }}
                <div class="col-md-2 col-sm-8">{{ form_widget(form.date) }}</div>
                <div class="col-md-1 col-sm-4">{{ form_widget(form.hae) }}</div>
                    {{ form_end(form) }}
                <div class="col-md-12">
                    <a href="/firstseen/{{ date|date_modify("-1 day")|date("Y-m-d") }}"><==</a>
                    {{ date|format_date('short', locale='fi') }} ensi kertaa nähdyt. Yhteensä {{ activeLkm+deletedLkm }} kpl.
                    <a href="/firstseen/{{ date|date_modify("+1 day")|date("Y-m-d") }}">==></a>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table taulukot">
                        <caption>Aktiivisia - {{ activeLkm }} kpl</caption>
                        {% set dateType = "Muuttunut" %}
                        {{ include('fragments/_outTable_header.html.twig') }}
                        {% if active|length >0 %}
                            {% for outTuote in active %}
                                {{ include('fragments/_outTable.html.twig') }}
                            {% endfor %}
                        {% endif %}
                    </table>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table taulukot">
                        <caption>Poistuneet - {{ deletedLkm }}kpl</caption>
                        {% set dateType = "Poistunut" %}
                        {{ include('fragments/_outTable_header.html.twig') }}
                        {% if deleted|length >0 %}
                            {% for outTuote in deleted %}
                                {{ include('fragments/_outTable.html.twig') }}
                            {% endfor %}
                        {% endif %}
                    </table>
                </div>
            </div>
        </div>
            {% endblock %}
    </body>
